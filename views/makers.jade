doctype html
html
  head
    meta(charset='utf-8')
    title 음악 저작권 거래 플랫폼
    link(rel="stylesheet" type="text/css" href="/stylesheets/main.css")
  body
    div(id='container')

      label(for='name' class='col-lg-2 control-label')
        a(href='/users') 구매자
        =" | "
        a 판매자

      <img src="/images/singer.jpg" width=70% height=70%><br>
      h2(id='description')
        span='펀딩 계좌 : ' + fund_balance
        font(color='gray')  ETH

      h2(id='description')
        span='판매자 ETH 잔액 : ' + maker_balance
        font(color='gray')  ETH

      button(id='button' onClick="location.href='/makers/withdraw'") ETH 환급하기

    div(id='comment')
      li 펀딩 계좌 :
        ul=fund + ' : ' + fund_balance + ' (ETH), ' + fund_tamount + ' (LollinToken)'
      li 판매자 계좌 :
        ul=maker + ' : ' + maker_balance + ' (ETH), ' + maker_tamount + ' (LollinToken)'