doctype html
html
  head
    meta(charset='utf-8')
    title 음악 저작권 거래 플랫폼
    link(rel="stylesheet" type="text/css" href="/stylesheets/main.css")
  body
    div(id='container')

      label(for='name' class='col-lg-2 control-label')
        a(href='/users') Home

      <img src="/images/rollin.jpg" width=40% height=40%>

      h2 저작권 구매하기

      form(action='/users/join' method='post')

        label(for='name' class='col-lg-2 control-label') 내 계좌 (From)
        input(type='text' name='user' placeholder='Sender Account')

        label(for='name' class='col-lg-2 control-label') 구매금액 (ETH)
        input(type='text' name='famount' placeholder='Amount (ETH)')

        label(for='name' class='col-lg-2 control-label') 계좌 패스워드
        input(type='text' name='passphase' placeholder='passphase')

        button(id='button' onClick="loader.style.display='block';submit();") 구매

        div(id='loader' style='display:none;')
          <img src='/images/ring-spinner.gif'>
